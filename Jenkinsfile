pipeline{
    agent any
    stages{
        stage ("1st stage"){
        steps {
            echo "hello anunay"
             }
        }
        stage ("groovy"){
             steps {
                echo ("this is lemor defining block")
                script{
                     def lemor = "rem"
                     if (lemor == "rem")
                        println(thanks for enrolling for $(lemor))
                     else
                    println(please enroll for benefits)
                }
            }
         }
        }
    }
